@using InterestsAcademy.Core.Models.Article
@model List<ArticleCardViewModel>



@if (Model.Count == 0)
{
	<p>Няма новини </p>
}
else
{

	<div class="main-news">
		<div class="text">
			<span class="date">@Model[0].PublishedOn.ToString()</span>
			<h1>@Model[0].Name</h1>
			<p>@Model[0].Description</p>
			<a href="#" class="read-more">Научи повече →</a>
		</div>
		<div class="image">
			<img src="@Model[0].PictureURLs[0]" alt="Илюстрация">
		</div>
	</div>


	@foreach (var article in Model.Skip(1))
	{

		<article class="news-item">
			<a asp-action="Info" asp-controller="Article" asp-route-id="@article.Id">
				<img src="@article.PictureURLs[0]" alt="Новина 1">
				<span class="date">@article.PublishedOn.ToString()</span>
				<h2>@article.Name</h2>
			</a>
		</article>


	}
}

@section Styles {
	<link rel="stylesheet" href="~/css/blogAll.css" asp-append-version="true" />
}