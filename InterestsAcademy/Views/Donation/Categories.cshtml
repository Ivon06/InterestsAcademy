@using InterestsAcademy.Core.Models.Donation
@model FilterDonationViewModel



<div class="heading-page header-text" style="margin-top:-4em;     width: 95em;">
	<section class="page-heading">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="text-content">
						<h4>Направи добро - Дарения за академията</h4>
						<h1>InterestAcademy Donations</h1>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>

<div class="categories">
	<a class="category" asp-action="Categories" asp-controller="Donation" asp-route-category="All">
		<img src="~/img/all.png" alt="Всичко">
		<p>Всичко</p>
	</a>
	<a class="category"  asp-action="Categories" asp-controller="Donation" asp-route-category="Biology">
		<img src="~/img/biology.png" alt="Медицина">
		<p>Биология и Химия</p>
	</a>
	<a class="category"  asp-action="Categories" asp-controller="Donation" asp-route-category="Physics">
		<img src="~/img/phisiscs.png" alt="Семейство">
		<p>Физика и Астриномия</p>
	</a>
	<a class="category"  asp-action="Categories" asp-controller="Donation" asp-route-category="Art">
		<img src="~/img/art.png" alt="Животни">
		<p>Музика и Изкуство</p>
	</a>
	<a class="category"  asp-action="Categories" asp-controller="Donation" asp-route-category="It">
		<img src="~/img/it.png" alt="COVID-19">
		<p>Информатика и роботика</p>
	</a>
	<a class="category"  asp-action="Categories" asp-controller="Donation" asp-route-category="Sport">
		<img src="~/img/sports.png" alt="Спорт">
		<p>Спорт</p>
	</a>
	<a class="category"  asp-action="Categories" asp-controller="Donation" asp-route-category="Other">
		<img src="~/img/other.png" alt="COVID-19">
		<p>Други</p>
	</a>
</div>

<div class="donations">
	<section class="items">
		@foreach (var item in Model.Donations)
		{
			<div id="item" data-id="@item.Id">
				<div class="card">
					<div class="card-details">
						<p class="text-title">@item.ItemName</p>
						<p class="text-body" id="@item.Id">Нужно количество: @item.Quantity</p>
						<a class="button" asp-action="CreateDonate" asp-controller="Donation" asp-route-id="@item.Id" id="donate" type="submit">Дари</a>
					</div>
				</div>
			</div>

		}
	</section>
</div>



@section Scripts {
	<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/recieveDonate.js"></script>
}

@section Styles {
	<link rel="stylesheet" href="~/css/donation.css" asp-append-version="true" />
}