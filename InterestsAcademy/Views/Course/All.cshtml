@using InterestsAcademy.Core.Models.Course
@model List<CourseCardViewModel>


<div class="row" style="margin-left: 20px; margin-bottom: 100px;">


	@foreach (var course in Model)
	{
		<div class="col-md-4">
			<div class="card ">
				<div class="card-body">
					<div class="room-card">
						<div class="room-icon">
							<img src="https://via.placeholder.com/64" alt="Room Icon">
						</div>
						<div class="room-details">
							<h3 class="room-title">@course.Name</h3>
							<p>@course.Description</p>
							@if (User.IsInRole("Student"))
							{
								<a id="send" asp-action="CreateView" asp-controller="Request" asp-route-courseId="@course.Id" class="btn btn-outline-dark">Запиши се</a>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	}

</div>

@section Styles {
	<link rel="stylesheet" href="~/css/courseCard.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/allCourse.css" asp-append-version="true" />
}


