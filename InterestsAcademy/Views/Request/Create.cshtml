@model List<string>;
@{
	ViewData["FormTitle"] = "Заявка за записване";
}

<div class="page-wrapper bg-dark p-t-100 p-b-50" style="    margin-top: -5em;">
	<div class="wrapper wrapper--w900">
		<div class="card card-6" style="border: none; box-shadow: none;">
			<div class="card-heading">
				<h2 class="title">@ViewData["FormTitle"]</h2>
			</div>
			<div class="card-body">
					<div class="form-row">
						<div class="name">Курс</div>
						<div class="value">
							<input id="course" class="input--style-6" type="text" name="full_name" value="@Model[0]" disabled></input>
						</div>
					</div>

					<div class="form-row">
						<div class="name">Име</div>
						<div class="value">
						<input id="name" class="input--style-6" type="text" value="@Model[1]" disabled>
							<span class="text-danger" style="display: none">Това поле е задължително</span>
						</div>
					</div>
					<div class="form-row">
						<div class="name">Имейл</div>
						<div class="value">
						<input id="email" class="input--style-6" type="text" value="@Model[2]" disabled>
							<span class="text-danger" style="display: none">Това поле е задължително</span>
						</div>
					</div>
					<div class="card-footer">
						<button class="btn btn--radius-2 btn--blue-2" id="send" type="submit">Изпрати</button>
					</div>
				@Html.AntiForgeryToken();
			</div>
		</div>
	</div>
</div>

@section Styles {
	<link rel="stylesheet" href="~/css/request.css" asp-append-version="true" />
}

@section Scripts {
	<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
	<script src="~/js/applyStudent.js" asp-append-version="true"></script>
}