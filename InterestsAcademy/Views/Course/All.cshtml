@using InterestsAcademy.Core.Models.Course
@model List<CourseCardViewModel>


<div class="row" style="margin-left: 20px; margin-bottom: 100px;">

	
	@if (User.IsInRole("Teacher"))
	{
				<div class="col-md-4">
					<div class="card ">
						<div class="card-body">

							<div class="room-card">
								<a asp-controller="Course" asp-action="Add" class="room-card">
									<h3 class="room-title">
										<svg xmlns="http://www.w3.org/2000/svg" width="50%" height="50%" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
											<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
										</svg>
									</h3>
								</a>
							</div>

						</div>
					</div>
				</div>
	}

	
	@foreach (var course in Model)
	{
		<div class="col-md-4">
			<div class="card ">
				<div class="card-body">
					
						<partial name="_CourseCardPartial" model="@course" />
					
				</div>
			</div>
		</div>
	}

</div>

@section Styles {
	<link rel="stylesheet" href="~/css/courseCard.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/allCourse.css" asp-append-version="true" />
}
