@using InterestsAcademy.Core.Models.Course
@model List<CourseCardViewModel>


<section id="team" class="pb-5">
	<div class="container">
		<h5 class="section-title h1">Всички курсове</h5>
		<div class="row">

			@if (User.IsInRole("Teacher"))
			{
				<div class="col-xs-12 col-sm-6 col-md-4" >
					<div>
						<div>
							<div class="frontside">
								<div class="card">
									<div class="card-body text-center">
										<p><img class=" img-fluid" src="https://sunlimetech.com/portfolio/boot4menu/assets/imgs/team/img_01.png" alt="card image"></p>
										<h4 class="card-title"></h4>
										<p class="card-text"></p>
										<a class="btn btn-primary btn-sm" style="    margin-top: 3.5em;" asp-action="Add" asp-controller="Course"><i class="fa fa-plus" style="padding:2em;"></i></a>
									</div>
								</div>
							</div>

						</div>
					</div>
				</div>
			}


			@foreach (var course in Model)
			{
				<div class="col-md-4">


					<div class="col-xs-12 ">
						<div class="image-flip">
							<div class="mainflip flip-0">
								<div class="frontside">
									<div class="card">
										<div class="card-body text-center">
											<p><img class=" img-fluid" src="~/img/blank-profile-picture.png" alt="card image"></p>
											<h4 class="card-title">@course.Name</h4>
											<p class="card-text truncate-multi-line">@course.Description</p>
											<!--<a href="https://www.fiverr.com/share/qb8D02" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i></a>-->
										</div>
									</div>
								</div>
								<div class="backside">
									<div class="card">
										<div class="card-body text-center mt-4">
											<h4 class="card-title">@course.Name</h4>
											<div class="css-1io73yq eu4oa1w0">
												<span class="css-18p8mbl e1wnkr790 text-wrap">
													@course.Description
												</span>
											</div>
											@* <p class="card-text">@Model.Description</p> *@
											<ul class="list-inline">

												
												@if(User.IsInRole("Teacher"))
												{
													<a type="button" class="btn btn-outline-dark" data-mdb-ripple-init data-mdb-ripple-color="dark" asp-action="All" asp-controller="Request" asp-route-courseId="@course.Id">Заявки</a>
													<a type="button" class="btn btn-outline-dark" data-mdb-ripple-init data-mdb-ripple-color="dark" asp-action="Edit" asp-controller="Course" asp-route-courseId="@course.Id">Редактиране</a>
													<a type="button" class="btn btn-outline-dark" data-mdb-ripple-init data-mdb-ripple-color="dark" asp-action="All" asp-controller="Activity" asp-route-courseId="@course.Id">График</a>

												}
												else if(User.IsInRole("Student"))
												{
													<a type="button" class="btn btn-outline-dark" data-mdb-ripple-init data-mdb-ripple-color="dark" asp-action="All" asp-controller="Activity" asp-route-courseId="@course.Id">График</a>
												}

											</ul>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

						
				</div>
			}

		</div>
	</div>
</section>


@section Styles {
	<link rel="stylesheet" href="~/css/courseCard.css" asp-append-version="true" />
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
}

@section Scripts {
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
}
