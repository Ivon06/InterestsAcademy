

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - InterestsAcademy</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />

	<link rel="stylesheet" href="~/css/styles2.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/InterestsAcademy.styles.css" asp-append-version="true" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

	@await RenderSectionAsync("Styles", required: false)
</head>
<body>
	

	<header id="header" class="header d-flex align-items-center fixed-top" style="position:fixed;  --background-color: rgba(20, 20, 20);">
		<div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between" style="margin-right: 20px;
  margin-left: 20px; max-width: 13000px; ">



			<nav id="navmenu" class="navmenu">
				<ul>

					<li class="dropdown">
						<a href="#">
							<label class="bar" for="check">
								<input type="checkbox" id="check">

								<span class="top"></span>
								<span class="middle"></span>
								<span class="bottom"></span>
							</label> <i class="bi bi-chevron-down toggle-dropdown"></i>
						</a>
						<ul>
							<li><a asp-controller="Home" asp-action="Index">Начална страница</a></li>
							<li class="dropdown">
								<a href="#"><span>Информация</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
								<ul>
									<li><a asp-controller="Home" asp-action="Privacy">Проект и Концепция</a></li>
									<li><a asp-controller="Home" asp-action="Contact">Контакти</a></li>

								</ul>
							</li>
							<li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Новини</a></li>
							<li class="nav-item"><a class="nav-link text-white" asp-area="AdminArea" asp-controller="Course" asp-action="All"> Kурсове</a></li>
							<li class="nav-item"><a class="nav-link text-white" asp-area="AdminArea" asp-controller="User" asp-action="All"> Потребители</a></li>




						</ul>

					</li>

				</ul>

				<i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
			</nav>

			<a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center" style="text-decoration: none;  margin-left:50px;">
				<!-- Uncomment the line below if you also wish to use an image logo -->
				<img src="~/img/Screenshot_2025-02-13_110015-removebg-preview.png" alt="">
				<h1 class="sitename">Академия за таланти</h1>
			</a>

			<ul>
				<partial name="_LoginPartial" />
			</ul>
		</div>
	</header>

	<!-- Main Content -->

	<main role="main" class="pb-3" style="margin-top:10%;">
		<div class="container-fluid px-0">
			@RenderBody()
		</div>
	</main>



	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
