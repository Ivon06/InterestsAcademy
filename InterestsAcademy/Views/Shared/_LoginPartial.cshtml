@using InterestsAcademy.Data.Models
@using InterestsAcademy.Extensions
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="custom-navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-white" asp-area="" asp-action="MyProfile" asp-controller="Profile" asp-route-userId="@User.GetId()" title="Manage">Зравей, @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
            <form class="form-inline" asp-area="" asp-action="Logout" asp-controller="Account">
            <button  type="submit" class="nav-link btn btn-link text-white">Излез</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-action="Register" asp-controller="Account">Регистрация</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-action="Login" asp-controller="Account">Вход</a>
    </li>
}
</ul>
