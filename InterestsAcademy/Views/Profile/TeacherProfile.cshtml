@using InterestsAcademy.Core.Models.Course
@model TeacherProfileCourseViewModel

<div class="profile-container">
    <!-- Profile Section -->
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-image">
                @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                {
                    <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle">
                }
                else
                {
                    <div class="profile-placeholder">
                        <i class="fas fa-user fa-5x"></i>
                    </div>
                }
            </div>
            <div class="profile-info">
                <h2>@Model.TeacherName</h2>
                <p class="text-muted">Преподавател</p>
                <a asp-action="Edit" asp-controller="Profile" asp-route-id="@Model.TeacherId" class="btn btn-warning">Промени</a>

            </div>
        </div>
    </div>

    <!-- Courses Section -->
    <div class="courses-container">
        <h3 class="section-title">Курсове</h3>
        <div class="row">
            @if (Model?.Cards != null)
            {
                @foreach (var course in Model.Cards)
                {
                    <div class="col-md-4 mb-4">
                        <div class="course-card">
                            <h4 class="course-title">@course.Name</h4>
                            <p class="course-description truncate-multi-line">@course.Description</p>
                            <a class="btn btn-outline-primary btn-sm"
                               asp-action="All" asp-controller="Request"
                               asp-route-courseId="@course.Id">
                                Информация
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-md-12">
                    <p class="text-center text-muted">Няма налични курсове.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/teacherprofile.css" />
}
