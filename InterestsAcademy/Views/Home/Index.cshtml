@{
    ViewData["Title"] = "Home Page";
}
@using InterestsAcademy.Core.Models.User
@model UsersQueryModel

<section id="hero" class="text-white d-flex align-items-center justify-content-center"
         style="background-color: black; min-height: 100vh;">
    <div id="hero-carousel" class="carousel slide w-100" data-bs-ride="carousel" id="home">
        <div class="carousel-inner">
            <div class="carousel-item active" style="background-image: url('@Url.Content("~/img/openart-5b6bf258-5ef7-4d67-b63e-64276fc4591c.png")'); background-size: cover; background-position: center; min-height: 100vh;">
                <div class="overlay"></div>
                <div class="container d-flex flex-column justify-content-center align-items-center text-center text-white">
                    
                </div>
            </div>

            <div class="carousel-item" style="background-image: url('@Url.Content("~/img/PAGE - 02-1.png")'); background-size: cover; background-position: center; min-height: 100vh;">
                <div class="overlay"></div>
                <div class="container d-flex flex-column justify-content-center align-items-center text-center text-white">
                   
                </div>
            </div>

            <div class="carousel-item" style="background-image: url('@Url.Content("~/img/PAGE - 04-1.png")'); background-size: cover; background-position: center; min-height: 100vh;">
                <div class="overlay"></div>
                <div class="container d-flex flex-column justify-content-center align-items-center text-center text-white">
                    
                </div>
            </div>

            <div class="carousel-item" style="background-image: url('@Url.Content("~/img/PAGE - 06-1.png")'); background-size: cover; background-position: center; min-height: 100vh;">
                <div class="overlay"></div>
                <div class="container d-flex flex-column justify-content-center align-items-center text-center text-white">
                  
                </div>
            </div>

           
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#hero-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#hero-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section > 
<div class="timeline">
    <a href="#home" class="timeline-item">
        <p class="timeline-text">Начало</p>
        <i class="fa-solid fa-house"></i>
    </a>
    <a href="#principal" class="timeline-item">
        <p class="timeline-text">Статистики</p>
        <i class="fa-regular fa-user"></i>
    </a>
    <a href="#team" class="timeline-item">
        <p class="timeline-text">Отчет</p>
        <i class="fa-regular fa-handshake"></i>
    </a>
</div>
 

<section id="principal" class="statistics2-section">
    <div class="stats2-container">
        <!-- Students Count -->
        <div class="stats2-circle stats2-card-1">
            <div class="stats2-icon">
                <i class="fas fa-users fa-3x"></i>
            </div>
            <div class="stats2-content">
                <h2 class="stats2-counter" data-count="@Model.StudentsCount">0</h2>
                <p class="stats2-label">Ученици</p>
            </div>
        </div>

        <!-- Activities Count -->
        <div class="stats2-circle stats2-card-2">
            <div class="stats2-icon">
                <i class="fas fa-calendar-check fa-3x"></i>
            </div>
            <div class="stats2-content">
                <h2 class="stats2-counter" data-count="@Model.ActivitiesCount">0</h2>
                <p class="stats2-label">Проведени активности</p>
            </div>
        </div>

        <!-- Courses Count -->
        <div class="stats2-circle stats2-card-3">
            <div class="stats2-icon">
                <i class="fas fa-book-open fa-3x"></i>
            </div>
            <div class="stats2-content">
                <h2 class="stats2-counter" data-count="@Model.CoursesCount">0</h2>
                <p class="stats2-label">Курса</p>
            </div>
        </div>
    </div>
</section>

<section class="statistics" id="team">
    <h2>Годишен отчет</h2>
    <div style="display:flex; flex-direction:row;">   
        <img src="~/img/statpic.png" alt="Achievements Image" class="stat-image">
        <div class="stats-container">
            <div class="stat">
                <div class="stat-number" data-target="150">0</div>
                <div class="stat-label">преведени срещи</div>
            </div>
            <div class="stat">
                <div class="stat-number" data-target="100000">0</div>
                <div class="stat-label">лв направени дарения</div>
            </div>
            <div class="stat">
                <div class="stat-number" data-target="100">0</div>
                <div class="stat-label">привлечени съмишленици</div>
            </div>
        </div>
    </div>
   
</section>


@section Styles {
      <link rel="stylesheet" href="~/css/styles2.css" asp-append-version="true" /> 
      <link rel="stylesheet" href="~/css/teamcards.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
}

@section Scripts{
   

<script src="~/js/index.js" asp-append-version="true">
           
</script>
}
